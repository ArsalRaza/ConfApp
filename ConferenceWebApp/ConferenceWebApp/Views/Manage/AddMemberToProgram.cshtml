@model ConferenceWebApp.Models.FormModels.ManageModel.AddMemberToProgramModel
@{
    ViewBag.Title = "Add Member To Program";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


@ViewBag.Error
@using (@Html.BeginForm())
{
     @Html.AntiForgeryToken()
     @Html.HiddenFor(m => m.ProgramId, Request.QueryString["ProgramId"])
   
    <div class="col-lg-6">
        <div class="well bs-component">
            <form class="form-horizontal">
                <fieldset>
                    <legend>@ViewBag.Title</legend>
                    <div class="form-group">
                        <label for="inputText" class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.MemberId) &nbsp; @Html.ValidationMessageFor(m => m.MemberId, null, new { @class = "text-danger field-validation-error" })</label>
                        <div class="col-lg-10">
                            @Html.DropDownListFor(m => m.MemberId, new SelectList(ViewBag.UserProfiles, "ID", "Name"), "Select User", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputText" class="col-lg-2 control-label">@Html.DisplayNameFor(m => m.CategoryId) &nbsp; @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger field-validation-error" })</label>
                        <div class="col-lg-10">
                            @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "ID", "CategoryName"),"Select Role", new { @class = "form-control" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
}

