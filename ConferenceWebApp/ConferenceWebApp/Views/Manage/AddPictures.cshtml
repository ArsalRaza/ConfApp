@{
    ViewBag.Title = "Add Pictures";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.MultiFile.js"></script>


@using (Html.BeginForm())
{
    @ViewBag.Error

    <div class="col-lg-6">
        <div class="well bs-component">
            <form class="form-horizontal">
                <fieldset>
                    <legend>@ViewBag.Title</legend>
                    <div class="form-group">
                        <label for="inputText" class="col-lg-2 control-label">Select Pictures </label>
                        <div class="col-lg-10">
                            <input type="file" class="form-control" multiple accept="gif|png|jpeg|jpg" name="UploadFiles" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-success">Upload Pictures</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
}