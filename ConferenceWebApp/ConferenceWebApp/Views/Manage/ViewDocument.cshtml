@model List<ConferenceWebApp.Models.File>
@{
    ViewBag.Title = "Files and Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2> Reports & Presentations </h2>

@Html.ActionLink("Add Document", "AddDocument", "Manage") <br /><br />

@foreach (ConferenceWebApp.Models.File DocumentFile in Model)
{
     <a href="@HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority)@ConferenceWebApp.BL.Constants.Constants.FilePaths.DocumentPath/@DocumentFile.FileName">@DocumentFile.Title</a> <br />

    <span>Speaker: </span>@DocumentFile.UserProfile.Name   <br />
    @DocumentFile.Description   <br />

    @Html.ActionLink("Delete", "DeleteDocument", new { DocumentId = @DocumentFile.ID }, new { onClick = "return ConfirmDelete('Document');" })

    <hr />
}

