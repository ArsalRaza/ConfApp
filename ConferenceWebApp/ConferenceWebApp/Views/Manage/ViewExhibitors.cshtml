@model List<ConferenceWebApp.Models.Exhibition>

@{
    ViewBag.Title = "ViewExhibitors";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<h2>View Exhibitors</h2>

@if (Model.Count == 0)
{
<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Notice</h3>
    </div>
    <div class="panel-body">
        No Exhibitor Detail Found
    </div>
</div>
}


<div class="panel panel-default">
    <div class="panel-heading">@Html.ActionLink("Add New Exhibitor", "AddExhibitor", "Manage", new { @class = "btn btn-primary btn-xs" }) </div>
    <div class="panel-body">

        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Exhibitor</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Exhibitor in Model)
                {
                    <tr>
                        <td>
                            <img src="@ConferenceWebApp.BL.Constants.Constants.FilePaths.ExhibitorImagesPath/@Exhibitor.Photo" />
                        </td>
                        <td>
                            @Exhibitor.ExhibitorName
                        </td>
                        <td>
                            @Html.ActionLink("Remove", "DeleteExhibitor", new { ExhibitorId = @Exhibitor.ID }, new { onClick = "return ConfirmDelete('Exhibitor Detail');", @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
