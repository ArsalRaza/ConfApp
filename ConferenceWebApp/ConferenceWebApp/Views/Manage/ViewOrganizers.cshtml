@model List<ConferenceWebApp.Models.Organizers>

@{
    ViewBag.Title = "View Organizers";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}



<h2>Organizers</h2>

@if (Model.Count == 0)
{
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">Notice</h3>
        </div>
        <div class="panel-body">
            No Organizer Found
        </div>
    </div>
}


<div class="panel panel-default">
    <div class="panel-heading">@Html.ActionLink("Add New Organizer", "AddOrganizers", "Manage", new { @class = "btn btn-primary btn-xs" }) </div>
    <div class="panel-body">

        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Organizer Name</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Organizer in Model)
                {
                    <tr>
                        <td>
                            <img src="@ConferenceWebApp.BL.Constants.Constants.FilePaths.OrganizersImagePath@Organizer.Photo" />
                        </td>
                        <td>
                            @Organizer.OrganizerName 
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteOrganizer", new { OrganizerId = Organizer.ID }, new { onClick = "return ConfirmDelete('Organizer');", @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
