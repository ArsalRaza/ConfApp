@model List<ConferenceWebApp.Models.SponsorPartnerCategory>

@{
    ViewBag.Title = "ViewPartnerCategory";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<h2>Partner Categories</h2>

<div class="panel panel-default">
    <div class="panel-heading">@Html.ActionLink("Add New Partner Category", "AddPartnerCategory", "Manage", new { @class = "btn btn-primary btn-xs" }) </div>
    <div class="panel-body">
        @{
            var grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 100, defaultSort: "ID");
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(tableStyle: "table table-striped table-hover ", headerStyle: "text-left", htmlAttributes: new { id = "UsersList" }, columns: grid.Columns(
                                      grid.Column("CategoryName", header: "Category Name"),
                    grid.Column("Sequence"),
            grid.Column(header: "Edit", format: @<text>@Html.ActionLink("Edit", "EditPartnerCategory", "Manage", new { PartnerCateogryId = item.ID }, new { target = "_self" })</text>)));

        }

    </div>
</div>
